generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id            String        @id @default(uuid())
  accountNumber String        @unique @map("account_number")
  accountType   String        @map("account_type")
  nickname      String?
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  transactions  Transaction[]

  @@map("accounts")
}

model ImportFile {
  id            String        @id @default(uuid())
  filename      String
  fileHash      String?       @map("file_hash")
  rowCount      Int           @map("row_count")
  insertedCount Int           @map("inserted_count")
  skippedCount  Int           @map("skipped_count")
  failedCount   Int           @map("failed_count")
  importedAt    DateTime      @default(now()) @map("imported_at")
  transactions  Transaction[]

  @@map("import_files")
}

model Transaction {
  id              String     @id @default(uuid())
  sourceRowHash   String     @unique @map("source_row_hash")
  transactionDate DateTime   @map("transaction_date")
  settlementDate  DateTime   @map("settlement_date")
  action          String
  symbol          String?
  symbolMapped    String?    @map("symbol_mapped")
  description     String
  quantity        Float?
  price           Float?
  grossAmount     Float?     @map("gross_amount")
  commission      Float?
  netAmount       Float?     @map("net_amount")
  currency        String
  activityType    String     @map("activity_type")
  cadEquivalent   Float?     @map("cad_equivalent")
  accountId       String     @map("account_id")
  importFileId    String     @map("import_file_id")
  createdAt       DateTime   @default(now()) @map("created_at")
  importFile      ImportFile @relation(fields: [importFileId], references: [id], onDelete: Cascade)
  account         Account    @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@index([symbol])
  @@index([symbolMapped])
  @@index([transactionDate])
  @@index([settlementDate])
  @@index([action])
  @@map("transactions")
}

model PriceCache {
  id            String   @id @default(uuid())
  symbol        String   @unique
  price         Float
  previousClose Float?   @map("previous_close")
  currency      String
  fetchedAt     DateTime @map("fetched_at")
  expiresAt     DateTime @map("expires_at")

  @@map("price_cache")
}

model FxCache {
  id        String   @id @default(uuid())
  pair      String   @unique
  rate      Float
  fetchedAt DateTime @map("fetched_at")
  expiresAt DateTime @map("expires_at")

  @@map("fx_cache")
}

model SymbolMapping {
  id           String   @id @default(uuid())
  internalCode String   @unique @map("internal_code")
  ticker       String
  name         String?
  createdAt    DateTime @default(now()) @map("created_at")

  @@map("symbol_mappings")
}

model PortfolioSettings {
  id           String             @id @default(uuid())
  weeklyAmount Float              @default(0) @map("weekly_amount")
  fxFeePercent Float              @default(1.5) @map("fx_fee_percent")
  updatedAt    DateTime           @updatedAt @map("updated_at")
  targets      AllocationTarget[]

  @@map("portfolio_settings")
}

model AllocationTarget {
  id                  String            @id @default(uuid())
  portfolioSettingsId String            @map("portfolio_settings_id")
  symbol              String
  targetWeight        Float             @map("target_weight")
  currency            String
  settings            PortfolioSettings @relation(fields: [portfolioSettingsId], references: [id], onDelete: Cascade)

  @@unique([portfolioSettingsId, symbol])
  @@map("allocation_targets")
}
