generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============ NEXTAUTH MODELS ============

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("user") // admin, user
  approved      Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  authAccounts AuthAccount[]
  sessions     Session[]
  accounts     Account[]
}

model AuthAccount {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============ PORTFOLIO MODELS ============

model Account {
  id        String   @id @default(cuid())
  userId    String
  broker    String   // WEALTHSIMPLE, QUESTRADE, INTERACTIVE_BROKERS, TD_DIRECT, OTHER
  name      String
  currency  String   @default("CAD") // CAD, USD
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Questrade integration
  questradeAccountNumber String?
  lastSyncedAt           DateTime?

  user           User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions   Transaction[]
  holdings       Holding[]
  questradeToken QuestradeToken?

  @@index([userId])
  @@index([broker])
}

model Transaction {
  id        String   @id @default(cuid())
  accountId String
  ticker    String
  type      String   // BUY, SELL, DIVIDEND_CASH, DIVIDEND_DRIP, TRANSFER_IN, TRANSFER_OUT, SPLIT
  quantity  Decimal
  price     Decimal
  fee       Decimal  @default(0)
  tradeDate DateTime
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@index([ticker])
  @@index([tradeDate])
  @@index([type])
  @@index([accountId, ticker])
}

model Holding {
  id            String   @id @default(cuid())
  accountId     String
  ticker        String
  quantity      Decimal
  avgCost       Decimal
  currency      String
  lastUpdatedAt DateTime @default(now())

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, ticker])
  @@index([ticker])
}

model DividendSchedule {
  id                   String   @id @default(cuid())
  ticker               String   @unique
  lastDividendPerShare Decimal
  lastDividendDate     DateTime
  frequency            String   // MONTHLY, QUARTERLY, SEMI_ANNUAL, ANNUAL, IRREGULAR
  source               String   @default("manual") // api, manual, imported
  updatedAt            DateTime @updatedAt

  @@index([frequency])
}

model PriceCache {
  id               String   @id @default(cuid())
  ticker           String   @unique
  price            Decimal
  currency         String
  dividendYield    Decimal?
  previousClose    Decimal?
  name             String?
  logoUrl          String?
  fiftyTwoWeekHigh Decimal?
  fiftyTwoWeekLow  Decimal?
  updatedAt        DateTime @updatedAt

  @@index([updatedAt])
}

model ImportLog {
  id        String   @id @default(cuid())
  accountId String
  filename  String
  rowCount  Int
  status    String   // success, partial, failed
  errors    String?  // JSON string
  createdAt DateTime @default(now())

  @@index([accountId])
  @@index([createdAt])
}

model QuestradeToken {
  id           String   @id @default(cuid())
  accountId    String   @unique
  accessToken  String
  refreshToken String
  apiServer    String   // e.g., "https://api01.iq.questrade.com/"
  expiresAt    DateTime
  updatedAt    DateTime @updatedAt

  account Account @relation(fields: [accountId], references: [id], onDelete: Cascade)
}

model PortfolioSnapshot {
  id         String   @id @default(cuid())
  userId     String
  date       DateTime
  totalValue Decimal
  totalCost  Decimal          // Total cost basis for P/L calculation
  currency   String           // CAD
  createdAt  DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
  @@index([date])
}
